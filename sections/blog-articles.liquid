 <section class="news-container" style="animation: fadeIn {{ section.settings.fade_duration }}s forwards;">
        {% assign blog_handle = blog.handle %}
        {% assign blog = blogs[blog_handle] %}

    {% paginate blog.articles by 600 %}
        {% for article in blog.articles %}
          <a href="{{ article.url }}" class="news-link">
        <article style="
          background-color: {{ section.settings.card_color }}; 
          border-radius: {{ section.settings.card_radius }}px" 
          class="news-item">
            {% if article.image %}
              {% assign article_image_alt = article.image.alt | default: article.title %}
              <img
                src="{{ article.image | image_url: width: 900 }}"
                srcset="{{ article.image | image_url: width: 360 }} 360w, {{ article.image | image_url: width: 540 }} 540w, {{ article.image | image_url: width: 720 }} 720w, {{ article.image | image_url: width: 900 }} 900w, {{ article.image | image_url: width: 1200 }} 1200w"
                sizes="(max-width: 749px) 100vw, (max-width: 1200px) 50vw, 33vw"
                width="{{ article.image.width }}"
                height="{{ article.image.height }}"
                loading="lazy"
                decoding="async"
                alt="{{ article_image_alt | escape }}"
              >
            {% endif %}
            <h5 style="
              text-align:{{ section.settings.header_alignment }}; 
              color:{{ section.settings.header_color }};
              {% if section.settings.header_alignment == "left" %}
              margin-left: 5px; 
              {% endif %}
              ">
              {{ article.title }}
            </h5>
            {% if section.settings.show_article_date %}
            <p style="
              color: {{ section.settings.date_color }};
              text-align: {{ section.settings.create_date_alignment }}
              ">
              {{ article.created_at | date: format: 'abbreviated_date' }}
              </p>
            {% endif %}
          </article>
          </a>
        {% endfor %}
    {% endpaginate %}
    </section>

{% schema %}
    {
  "name": "Blog Articles",
  "tag": "div",
  "settings": [
    {
      "type": "header",
      "content": "Alignment"
    },
    {
      "type": "radio",
      "id": "header_alignment",
      "label": "Article Title Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Centered"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "card_color",
      "label": "Article Card Color",
      "default": "#FFF"
    },
    {
      "type": "color",
      "id": "header_color",
      "label": "Article Header Color",
      "default": "#000"
    },
    
    
    {
      "type": "color",
      "id": "date_color",
      "label": "Article Date Color",
      "default": "#000"
    },
    {
      "type": "checkbox",
      "id": "show_article_date",
      "label": "Display Article Created Date",
      "default": true
    },
    {
      "type": "header",
      "content": "Article Card Corners"
    },
     {
      "type": "paragraph",
      "content": "This settings affects the curve of the article cards corners."
    },
    {
    "type": "range",
    "id": "card_radius",
    "min": 0,
    "max": 10,
    "step": 1,
    "unit": "px",
    "label": "Card Curve",
    "default": 0
    }, 
    {
      "type": "header",
      "content": "Fade Animation"
    },
      {
      "type": "paragraph",
      "content": "This settings affects how long it takes the articles to fade-in to the page."
    },
    
     {
    "type": "range",
    "id": "fade_duration",
    "min": 0,
    "max": 8,
    "step": 1,
    "unit": "sec",
    "label": "Fade-In Duration",
    "default": 2
      }

  ]
}
{% endschema %}
