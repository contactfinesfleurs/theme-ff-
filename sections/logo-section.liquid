<div class="logo-container">
      <a href="{{ routes.root_url }}" class="logo-link w-inline-block">
              {% assign logo_size = settings.product_screen_logo_size | default: 150 %}
              {% assign logo_2x = logo_size | times: 2 | at_least: 240 | at_most: 600 %}
              {% if settings.shop_screen_logo %}
              {% assign logo_height = logo_size | divided_by: settings.shop_screen_logo.aspect_ratio | round %}
              <img
                src="{{ settings.shop_screen_logo | image_url: width: logo_2x }}"
                srcset="{{ settings.shop_screen_logo | image_url: width: logo_size }} {{ logo_size }}w, {{ settings.shop_screen_logo | image_url: width: logo_2x }} {{ logo_2x }}w"
                sizes="{{ logo_size }}px"
                width="{{ logo_size }}"
                height="{{ logo_height }}"
                style="width: {{ logo_size }}px"
                loading="eager"
                decoding="sync"
                fetchpriority="high"
                alt="{{ shop.name | escape }}"
                class="logo">
              {% else %}
              <img src="{{ 'Supreme-dummy.png' | asset_url }}" style="width: {{ logo_size }}px" loading="eager" decoding="sync" fetchpriority="high" alt="{{ shop.name | escape }}" class="logo">
              {% endif %}
            </a> 
      <!--   PRODUCT TIMEZONE SECTION     -->
      {% if section.settings.show_date_time %}
      <div class="date-time-container">
        <div class="date" style="color: {{ section.settings.index_date_color }}">{{ 'tn7d8e379f' | t }}</div>
        <div class="time" style="color: {{ section.settings.index_time_color }}">{{ 't589b2285' | t }}</div>
      </div>
      {% endif %}
    </div>
    <!-- END LOGO CONTAINER -->


{% schema %}
  {
    "name": "Logo & Clock",
    "settings": [
      {
      "type": "checkbox",
      "id": "show_date_time",
      "label": "Show Date/Time",
      "default": true
      },
      {
      "type": "color",
      "id": "index_date_color",
      "label": "Date Color",
      "default": "#000"
    },
     {
      "type": "color",
      "id": "index_time_color",
      "label": "Time Color",
      "default": "#000"
    }
    ]
  }
{% endschema %}

