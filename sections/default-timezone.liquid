<div class="logo-container" style="background-color: {{ section.settings.background_color }};">
    <a href="{{ routes.root_url }}" class="logo-link w-inline-block">
      {% if settings.show_default_logo %}
    {% assign default_logo_size = settings.shop_screen_logo_size | default: 150 %}
    {% assign default_logo_2x = default_logo_size | times: 2 | at_least: 240 | at_most: 600 %}
    {% if settings.shop_screen_logo %}
            {% assign default_logo_height = default_logo_size | divided_by: settings.shop_screen_logo.aspect_ratio | round %}
            <img
                    src="{{ settings.shop_screen_logo | image_url: width: default_logo_2x }}"
                    srcset="{{ settings.shop_screen_logo | image_url: width: default_logo_size }} {{ default_logo_size }}w, {{ settings.shop_screen_logo | image_url: width: default_logo_2x }} {{ default_logo_2x }}w"
                    sizes="{{ default_logo_size }}px"
                    width="{{ default_logo_size }}"
                    height="{{ default_logo_height }}"
                    style="width: {{ default_logo_size }}px"
                    loading="eager"
                    decoding="sync"
                    fetchpriority="high"
                    alt="{{ shop.name | escape }}"
                    class="logo"
            >
        {% else %}
            <img src="{{ 'Supreme-dummy.png' | asset_url }}"
                style="width: {{ default_logo_size }}px"
                loading="eager"
                decoding="sync"
                fetchpriority="high"
                alt="{{ shop.name | escape }}"
                class="logo">
        {% endif %}
      {% endif %}
    </a>
    {% if settings.show_date_time %}
        <div class="date-time-container">
            <div class="date" style="color: {{ section.settings.index_date_color }}">{{ 'tn7d8e379f' | t }}</div>
            <div class="time" style="color: {{ section.settings.index_time_color }}">{{ 't589b2285' | t }}</div>
        </div>
    {% endif %}
</div>


        
{% schema %}
{
  "name": "Logo & Clock",
  "tag": "div",
  "settings": [
    

   {
      "type": "color",
      "id": "index_date_color",
      "label": "Date Color",
      "default": "#000"
    },
     {
      "type": "color",
      "id": "index_time_color",
      "label": "Time Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background Color",
      "default": "transparent"
    }
  ]
}
{% endschema %}
