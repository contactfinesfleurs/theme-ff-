
<div class="enter-layouts" style="
z-index: 2;
display: flex;
flex-direction: column;
justify-content: center;
margin-top: 20px;
position: absolute;
top: 0;
{% if section.settings['logo-alignment'] == 'right' %}
        right: 0;
        margin-right: 40px;
        align-items: end;

{% else %}
        margin-left: 40px;
        align-items: start;

{% endif %}
">
{% if settings.show_home_logo %}
  <a href="{{ routes.root_url }}" aria-current="page" class="logo-link w-inline-block w--current"
  style=""
  >
    {% if settings.enter_screen_logo %}
      {% assign side_enter_logo_size = settings.enter_screen_logo_size | default: 120 %}
      {% assign side_enter_logo_2x = side_enter_logo_size | times: 2 | at_least: 240 | at_most: 480 %}
      {% assign side_enter_logo_height = side_enter_logo_size | divided_by: settings.enter_screen_logo.aspect_ratio | round %}
      <img src="{{ settings.enter_screen_logo | image_url: width: side_enter_logo_2x, format: 'webp' }}"
           srcset="{{ settings.enter_screen_logo | image_url: width: side_enter_logo_size, format: 'webp' }} {{ side_enter_logo_size }}w, {{ settings.enter_screen_logo | image_url: width: side_enter_logo_2x, format: 'webp' }} {{ side_enter_logo_2x }}w"
           sizes="{{ side_enter_logo_size }}px"
           width="{{ side_enter_logo_size }}"
           height="{{ side_enter_logo_height }}"
           style="width: {{ side_enter_logo_size }}px;"
           loading="eager"
           decoding="sync"
           fetchpriority="high"
           alt="{{ shop.name | escape }}"
           class="logo"
      >
    {% else %}

      <img src="{{ 'Supreme-dummy.png' | asset_url }}" loading="eager" decoding="sync" fetchpriority="high" alt="{{ shop.name | escape }}" class="logo">

    {% endif %}
  </a>
{% endif %}

{% if settings.show_home_time %}
  {% if section.settings.show_date_time %}
    <div class="date-time-container">
      <div class="date" style="color: {{ section.settings.index_date_color }}">{{ 'tn7d8e379f' | t }}</div>
      <div class="time" style="color: {{ section.settings.index_time_color }}">{{ 't589b2285' | t }}</div>
    </div>
  {% endif %}
{% endif %}
</div>




{% schema %}
{
  "name": "Logo & Clock",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_date_time",
      "label": "Show Date/Time",
      "default": true
    },
    {
      "type": "color",
      "id": "index_date_color",
      "label": "Date Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "index_time_color",
      "label": "Time Color",
      "default": "#000"
    },
    {
      "type": "select",
      "id": "logo-alignment",
      "label": "Logo Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    }
  ]
}


{% endschema %}
