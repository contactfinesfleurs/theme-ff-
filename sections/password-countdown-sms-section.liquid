{%- assign headerSnippetPath = "header-index" -%}{%- assign wfPage = "640ec1b9bae1c5cb9703fef2" -%}{%- assign bodyClasses = "" -%}

{{ 'plain-jane.css' | asset_url | stylesheet_tag }}

{% assign pjCnfg = section.settings %}


<!--   ENTRANCE SCREEN     -->
<div end="{{ request.page_type }}" class="password-entrance no-flick" style="
        top: 0; background-color: {{ pjCnfg.entrance_screen_bg_color }};">
    <div class="password-entrance-box">
        {% if settings.shop_screen_logo %}
            <img style="margin-bottom: 50px; width:{{ settings.shop_screen_logo_size }}px;" src="{{ settings.shop_screen_logo | image_url}}"  alt="" class="logo">
        {% else %}
            <img style="margin-bottom: 50px; width: 300px;" src="{{ 'Supreme-dummy.png' | asset_url }}" alt="" class="logo">
        {% endif %}
        <a href="{{ routes.root_url }}" class="password-enter-text" style="max-width: 900px;{% if pjCnfg.enable_entrance_text_glow %} text-shadow: 0px 0px 10px {{ pjCnfg.entrance_screen_txt_color }}; {% endif %} text-decoration: none; color: {{ pjCnfg.entrance_screen_txt_color }}; text-align: center; line-height: 38px; padding: 0 10px">
            {{ pjCnfg.entrance_screen_txt }}
        </a>
    </div>
</div>

<!--   COUNTDOWN TIMER   -->
{% assign countdownBox = "" %}
{% capture countdownBox %}
  {% if pjCnfg.show_countdown_boxes == false %}
    background: transparent; backdrop-filter: none; {% if pjCnfg.enable_box_radius == false %} border-radius: 0; {% endif %}
  {% else %}
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.16) 0.01%, rgba(255, 255, 255, 0.00) 100%), {{ pjCnfg.countdown_box_color | color_modify: 'alpha', pjCnfg.countdown_box_opacity }};
    {% if pjCnfg.enable_box_radius == false %} border-radius: 0; {% endif %}
  {% endif %}
{% endcapture %}


  <div class="no-flick countdown-timer"
       style="
          {% if pjCnfg.center_timer %}
            position: absolute;
            top: 41%;
            left: 50%;
            transform: translate(-50%, -50%);
          {% endif %}
               margin-top: {{ pjCnfg.timer_margin_top }}px;
               margin-bottom: {{ pjCnfg.timer_margin_bottom }}px;
        "
       cMonth="{{ pjCnfg.countdown_month }}"
       cDay="{{ pjCnfg.countdown_day }}"
       cYear="{{ pjCnfg.countdown_year }}"
       cHour="{{ pjCnfg.countdown_hour }}"
       cMin="{{ pjCnfg.countdown_min }}"
       cAMmPm="{{ pjCnfg.countdown_ampm }}"
       countdownEndTime="{{ pjCnfg.countdown_end_time }}"
       disableCountdownAnimation="{{ pjCnfg.disable_countdown_animation }}"

  >
    <div class="countdown-box" style="{{ countdownBox }}">
      <div class="countdown-value-box">
        <p id="days" class="countdown-value {% if pjCnfg.enable_countdown_glow %}glo-up-1{% endif %}" 
           style="--glo-color-days:{{ pjCnfg.days_value_color }}; 
                  color:{{ pjCnfg.days_value_color }};">
        </p>
        {% if pjCnfg.show_countdown_metrics %}
          <p class="countdown-metric" style="display: block; color: {{ pjCnfg.days_color }};">
            DAYS
          </p>
        {% endif %}
      </div>
    </div>
    <div class="countdown-box" style="{{ countdownBox }}">
      <div class="countdown-value-box">
        <p id="hours" class="countdown-value {% if pjCnfg.enable_countdown_glow %}glo-up-2{% endif %}" 
           style="color: {{ pjCnfg.hours_value_color }}; 
                  --glo-color-hours: {{ pjCnfg.hours_value_color }};">
        </p>
        {% if pjCnfg.show_countdown_metrics %}
          <p class="countdown-metric" style="display: block; color: {{ pjCnfg.hours_color }};">
            HOURS
          </p>
        {% endif %}
      </div>
    </div>
    <div class="countdown-box" style="{{ countdownBox }}">
      <div class="countdown-value-box">
        <p id="minutes" class="countdown-value {% if pjCnfg.enable_countdown_glow %}glo-up-3{% endif %}" 
           style="--glo-color-minutes:{{ pjCnfg.minutes_value_color }}; 
                  color: {{ pjCnfg.minutes_value_color }};">
        </p>
        {% if pjCnfg.show_countdown_metrics %}
          <p class="countdown-metric" style="display: block; color: {{ pjCnfg.minutes_color }};">
            MINUTES
          </p>
        {% endif %}
      </div>
    </div>
    <div class="countdown-box" style="{{ countdownBox }}">
      <div class="countdown-value-box">
        <p id="seconds" class="countdown-value {% if pjCnfg.enable_countdown_glow %}glo-up-4{% endif %}" 
           style="--glo-color-seconds:{{ pjCnfg.seconds_value_color }}; 
                  color: {{ pjCnfg.seconds_value_color }};">
        </p>
        {% if pjCnfg.show_countdown_metrics %}
          <p class="countdown-metric" style="display: block; color: {{ pjCnfg.seconds_color }};">
            SECONDS
          </p>
        {% endif %}
      </div>
    </div>
  </div>

<!-- Update the style block -->
<style>
  /* Default font size for mobile and tablet */
  .countdown-value {
    font-size: 24px;
  }
  
  .countdown-metric {
    font-size: 14px;
  }
  
  /* Desktop-specific font sizes */
  @media screen and (min-width: 992px) {
    .countdown-value {
      font-size: {{ pjCnfg.countdown_font_size }}px !important;
    }
    
    .countdown-metric {
      font-size: {{ pjCnfg.countdown_units_font_size }}px !important;
    }
  }
</style>


