{%- if request.page_type == 'index' -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": {{ shop.name | json }},
  "url": {{ shop.url | json }},
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      {%- capture search_url -%}{{ shop.url }}/search?q={% raw %}{search_term_string}{% endraw %}{%- endcapture -%}
      "urlTemplate": {{ search_url | json }}
    },
    "query-input": "required name=search_term_string"
  }
}
</script>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": {{ shop.name | json }},
  "url": {{ shop.url | json }},
  {%- if settings.shop_screen_logo != blank -%}
  "logo": {{ settings.shop_screen_logo | image_url: width: 600 | prepend: 'https:' | json }},
  {%- endif -%}
  {%- if settings.social_twitter_link != blank or settings.social_instagram_link != blank or settings.social_facebook_link != blank -%}
  "sameAs": [
    {%- assign social_links = '' -%}
    {%- if settings.social_twitter_link != blank -%}
      {%- assign social_links = social_links | append: settings.social_twitter_link | append: ',' -%}
    {%- endif -%}
    {%- if settings.social_instagram_link != blank -%}
      {%- assign social_links = social_links | append: settings.social_instagram_link | append: ',' -%}
    {%- endif -%}
    {%- if settings.social_facebook_link != blank -%}
      {%- assign social_links = social_links | append: settings.social_facebook_link | append: ',' -%}
    {%- endif -%}
    {%- assign social_links = social_links | split: ',' -%}
    {%- for link in social_links -%}
      {%- if link != blank -%}
        {{ link | json }}{% unless forloop.last %},{% endunless %}
      {%- endif -%}
    {%- endfor -%}
  ],
  {%- endif -%}
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "customer service",
    "url": {{ shop.url | append: '/pages/contact' | json }}
  }
}
</script>
{%- endif -%}
