{%- if image != blank -%}
  {%- assign focal_point = image.presentation.focal_point -%}
  {%- assign image_loading = loading | default: 'lazy' -%}
  {%- assign image_fetchpriority = fetchpriority -%}
  {%- if image_fetchpriority == blank -%}
    {%- if image_loading == 'lazy' -%}
      {%- assign image_fetchpriority = 'low' -%}
    {%- else -%}
      {%- assign image_fetchpriority = 'auto' -%}
    {%- endif -%}
  {%- endif -%}
  {%- assign image_decoding = decoding -%}
  {%- if image_decoding == blank -%}
    {%- if image_loading == 'eager' -%}
      {%- assign image_decoding = 'sync' -%}
    {%- else -%}
      {%- assign image_decoding = 'async' -%}
    {%- endif -%}
  {%- endif -%}
  {%- assign image_sizes = sizes | default: '100vw' -%}
  <img
    class="{{ image_class }}"
    src="{{ image | image_url: width: 1200 }}"
    srcset="
      {{ image | image_url: width: 400 }} 400w,
      {{ image | image_url: width: 800 }} 800w,
      {{ image | image_url: width: 1200 }} 1200w,
      {{ image | image_url: width: 1600 }} 1600w,
      {{ image | image_url: width: 2000 }} 2000w,
      {{ image | image_url: width: 2400 }} 2400w"
    sizes="{{ image_sizes }}"
    loading="{{ image_loading }}"
    decoding="{{ image_decoding }}"
    fetchpriority="{{ image_fetchpriority }}"
    alt="{{ alt | escape }}"
    width="{{ image.width }}"
    height="{{ image.height }}"
    style="object-position: {{ focal_point.x }}% {{ focal_point.y }}%"
  >
{%- else -%}
  {{ 'image' | placeholder_svg_tag: image_class }}
{%- endif -%} 
