<div class="password-email-form">
  <div class="container">
    {% if section.settings.header != blank %}
      <h2 class="form-header">{{ section.settings.header }}</h2>
    {% endif %}
    
    {% if section.settings.email_message != blank %}
      <p class="form-message">{{ section.settings.email_message }}</p>
    {% endif %}
    
    {%- form 'customer', class: 'email-form' -%}
      {% if form.errors %}
        <div class="form-error">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}
      
      {% if form.posted_successfully? %}
        <div class="form-success">
          {{ section.settings.success_message }}
        </div>
      {% else %}
        <div class="form-fields">
          <input
            type="email"
            name="contact[email]"
            id="EmailAddress"
            class="email-input"
            placeholder="{{ section.settings.email_placeholder }}"
            required
          >
          
          <button type="submit" class="submit-button-email">
            {{ section.settings.button_text }}
          </button>
        </div>
      {% endif %}
    {%- endform -%}
  </div>
</div>


<style>
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: {{ section.settings.margin_top_desktop }}px;
  margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  padding-left: 2rem;
  padding-right: 2rem;
  background-color: {{ section.settings.background_color }};
  padding-top: 4rem;
  padding-bottom: 4rem;
}

.password-email-form {
  text-align: center;
  width: 100%;
}

.form-header {
  margin-top: 0;
  margin-bottom: 20px;
  font-size: {{ section.settings.title_size_desktop }}px;
  font-weight: {{ section.settings.title_weight }};
  color: {{ section.settings.heading_color }};
  text-align: {{ section.settings.heading_alignment }};
}

.form-message {
  margin-bottom: 30px;
  font-size: 18px;
  font-weight: 400;
  color: {{ section.settings.message_color }};
  max-width: 560px;
  text-align: {{ section.settings.heading_alignment }};
}

.email-form {
  max-width: 600px;
  margin: 0 auto;
}

.form-fields {
  display: flex;
  gap: 10px;
  justify-content: center;
}

.email-input {
  flex: 1;
  padding: 12px 20px;
  border: 1px solid {{ section.settings.input_border }};
  border-radius: {{ section.settings.input_radius }}px;
  font-size: 16px;
  max-width: 400px;
  background-color: {{ section.settings.input_background }};
  color: {{ section.settings.input_text }};
}

.email-input::placeholder {
  color: {{ section.settings.input_placeholder }};
}

.submit-button-email {
  padding: 12px 16px;
  background-color: {{ section.settings.button_background }};
  color: {{ section.settings.button_text_color }};
  border: none;
  border-radius: {{ section.settings.button_radius }}px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
  width: fit-content;
  font-family: var(--btn_font), sans-serif;
}

.submit-button-email:hover {
  background-color: {{ section.settings.button_background | color_modify: 'lightness', -10 }};
}

.form-error {
  color: #ee4444;
  margin-bottom: 20px;
}

.form-success {
  color: {{ section.settings.success_color }};
  margin-bottom: 20px;
  font-size: 16px;
  padding: 12px;
  border-radius: 4px;
  background-color: {{ section.settings.success_color | color_modify: 'alpha', 0.1 }};
}

@media screen and (max-width: 600px) {
  .container {
    margin-top: {{ section.settings.margin_top_mobile }}px;
    margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    margin-left: {{ section.settings.margin_horizontal_mobile }}px;
    margin-right: {{ section.settings.margin_horizontal_mobile }}px;
  }

  .form-header {
    font-size: {{ section.settings.title_size_mobile }}px;
  }

  .form-message {
    font-size: 13px;
  }

  .form-fields {
    flex-direction: column;
  }
  
  .email-input {
    width: 100%;
    max-width: none;
  }
  
  .submit-button-email {
    width: 100%;
  }

  .form-success {
    font-size: 14px;
    padding: 10px;
  }
}
</style>

